<h2>Wellcome to PizzaShop</h2>

<div class="container-fluid">

  <div class="row">
    <% @pr.each do |p| %>
      <div class="col-md-4 col-xs-6">

        <div class="bg-success">
          Pizza <%= p.title %>
        </div>
        <div class="bg-info">
          <%= p.price %>  Ñ€.
        </div>

        <div>
          <img  class="img-responsive"  src="<%= p.path_to_image %>" />
        </div>

        <div class="bg-success">
          <%= p.description %>
        </div>

        <div class="bg-success">
          Size: <%= p.size %> cm.
        </div>

        <button type="button" class="btn btn-success btn-sm" onclick="add_to_cart(<%= p.id %>)">Add to cart </button>


      </div>
    <% end %>

  </div>
</div>
